<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white" >
    
    <ImageView 
        android:id="@+id/post_list_item_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/huo"/>
    
    <RelativeLayout
        android:id="@+id/post_list_item_rlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:layout_marginTop="16dp"
		android:layout_marginLeft="38dp"
		android:layout_marginRight="16dp">
        
        <TextView 
            android:id="@+id/post_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="锁屏密码忘了锁屏密码忘了忘了忘了怎么办"
            android:layout_marginBottom="6dp"
            android:padding="0dp"
            android:textColor="@color/header_text"
            android:textSize="16sp"/>
        
        <TextView
            android:id="@+id/post_list_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_list_item_title"
            android:layout_alignLeft="@+id/post_list_item_title"
            android:padding="0dp"
            android:singleLine="true"
            android:text="叫你调皮"
            android:textColor="@color/gray"
            android:textSize="10sp"/>
        
        <TextView 
            android:id="@+id/post_list_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_list_item_title"
            android:layout_alignParentRight="true"
            android:padding="0dp"
            android:singleLine="true"
            android:text="1234人参与"
            android:textColor="@color/gray"
            android:textSize="13sp"/>
    </RelativeLayout>

    <View 
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@+id/post_list_item_rlayout"/>
</RelativeLayout>