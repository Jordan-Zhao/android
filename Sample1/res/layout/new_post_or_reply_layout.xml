<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/new_post_head"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <ImageButton
            android:id="@+id/new_post_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/new_post_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/write_new_post"
            android:textColor="@color/header_text"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/divider" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <RelativeLayout
            android:id="@+id/new_post_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:padding="0dp"
            android:focusableInTouchMode="true" >

            <EditText
                android:id="@+id/new_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/input_edit"
                android:hint="@string/new_post_title_hint"
                android:minHeight="40dp"
                android:padding="14dp"
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:textCursorDrawable="@null" />

            <LinearLayout
                android:id="@+id/new_post_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:layout_below="@+id/new_post_title"
                android:layout_margin="16dp"
                android:background="@drawable/input_edit"
                android:orientation="vertical"
                android:padding="0dp" >

                <EditText
                    android:id="@+id/new_post_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="@string/new_post_content_hint"
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray"
                    android:textCursorDrawable="@null" 
                    android:layout_margin="14dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="10dp" >

                    <ImageButton
                        android:id="@+id/new_post_add_emo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_smile" />

                    <TextView
                        android:id="@+id/new_post_word_available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/new_post_add_emo"
                        android:layout_alignParentRight="true"
                        android:text="/1000"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/new_post_word_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/new_post_add_emo"
                        android:layout_toLeftOf="@+id/new_post_word_available"
                        android:text="0"
                        android:textColor="@color/green"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/new_post_imagelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_post_inputlayout"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="0dp" >

                <io.yunos.bbs.layout.SquareLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:padding="0dp" >

                    <ImageButton
                        android:id="@+id/new_post_image_0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_picture" />
                </io.yunos.bbs.layout.SquareLayout>

                <io.yunos.bbs.layout.SquareLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:padding="0dp" >

                    <ImageButton
                        android:id="@+id/new_post_image_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_picture_solid"
                        android:visibility="gone" />
                </io.yunos.bbs.layout.SquareLayout>

                <io.yunos.bbs.layout.SquareLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:padding="0dp" >

                    <ImageButton
                        android:id="@+id/new_post_image_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_picture_solid"
                        android:visibility="gone" />
                </io.yunos.bbs.layout.SquareLayout>

                <io.yunos.bbs.layout.SquareLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:padding="0dp" >

                    <ImageButton
                        android:id="@+id/new_post_image_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_picture_solid"
                        android:visibility="gone" />
                </io.yunos.bbs.layout.SquareLayout>

                <io.yunos.bbs.layout.SquareLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:padding="0dp" >

                    <ImageButton
                        android:id="@+id/new_post_image_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_picture_solid"
                        android:visibility="gone" />
                </io.yunos.bbs.layout.SquareLayout>
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="22dp"/>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/new_post_submit_layout"
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/new_post_submit"
            android:layout_width="86dp"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button_solid"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:text="@string/submit"
            android:textColor="@color/white" />
    </RelativeLayout>

    <GridView
        android:id="@+id/new_post_emo"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_below="@+id/new_post_submit_layout"
        android:background="@color/plates_head_bg"
        android:columnWidth="40dp"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:visibility="gone" >
    </GridView>

</LinearLayout>