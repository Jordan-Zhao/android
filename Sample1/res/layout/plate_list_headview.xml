<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/plate_list_headview_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="170dp" >

        <ImageView
            android:id="@+id/plate_list_headview_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="280dp"
            android:maxWidth="520dp"
            android:scaleType="centerCrop"
            android:src="@drawable/plate_list_head_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradual_black_bg" >

            <TextView
                android:id="@+id/plate_list_headview_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:ellipsize="end"
                android:padding="0dp"
                android:singleLine="true"
                android:text="锁屏密码忘了怎么办怎么办怎么办啊啊啊啊啊啊啊啊"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/plate_list_headview_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plate_list_headview_today"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/plate_list_headview_today_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/plate_list_headview_today"
                android:text="535"
                android:textColor="@color/green"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/plate_list_headview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/plate_list_headview_today"
                android:text="@string/plate_list_headview_title"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/plate_list_headview_title_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/plate_list_headview_title"
                android:text="395"
                android:textColor="@color/green"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/plate_list_headview_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/plate_list_headview_title"
                android:text="@string/plate_list_headview_post"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/plate_list_headview_post_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/plate_list_headview_post"
                android:text="41924"
                android:textColor="@color/green"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>