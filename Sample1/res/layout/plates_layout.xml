<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/plates_head"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:background="@color/plates_head_bg" >

        <TextView
            android:id="@+id/plate_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="82dp"
            android:text="@string/plates_head_name"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/plate_head_title_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="198dp"
            android:text="@string/plates_head_title_num"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/plate_head_post_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="268dp"
            android:layout_centerVertical="true"
            android:text="@string/plates_head_post_num"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/divider_light" />
    </RelativeLayout>

    <ListView
        android:id="@+id/plates_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/plates_head" />

</RelativeLayout>